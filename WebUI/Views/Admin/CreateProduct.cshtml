@model WebUI.Models.ProductModel
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
@section Scripts
{

    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
}
<script>
    CKEDITOR.replace( 'editor1' );
</script>
<h1>Create Product</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMessage</div>
        }
        <form asp-controller="Admin" asp-action="CreateProduct" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ImageUrl" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea  name="editor1" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Price" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>

        </form>

    </div>
</div>