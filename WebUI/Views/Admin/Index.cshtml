@model WebUI.Models.ProductListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


<h1>Admin Products</h1>
<hr />
@if (Model.Products.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td style="width: 30px">Id</td>
                <td style="width: 150px">Image</td>
                <td>Name</td>
                <td style="width: 12px">Price</td>
                <td style="width: 150px"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><img src="~/img/@item.ImageUrl" height="120" width="120" /> </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/admin/products/@item.Id">Edit</a>
                        <form action="/admin/deleteproduct" method="post" style="display: inline">
                            <input type="hidden" name="ProductId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No products.</h4>
    </div>
}


